print('quantas vezes a letra Aaparece e suas posições')
print('==============================================')
frase: str = str(input('digite uma frase')).strip().upper()
print('a letra A aparece {} vezes na frase'.format(frase.count("A")))
print('=======================================')
print(' a primeira letra A aparece na posição {}'.format(frase.find('A')+1))
print('=========================================')
print('a ultima letra A aperece na posição {}'.format(frase.rfind('A')))
print('=======================================')
